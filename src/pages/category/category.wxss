@import "../__template/searchBar/searchBar.wxss";

.g-category {
    padding-top: 66rpx;
    position: relative;
}

.category-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 200rpx;
    height: 100%;
}

.category-nav scroll-view {
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.category-nav view {
    height: 100rpx;
    font-size: 26rpx;
    justify-content: center;
    align-items: center;
    color: #666;
    background-color: #f6f6f6;
}

.category-nav view.cur {
    font-weight: 700;
    color: #f96969;
    background-color: #fff;
    border-right: solid #f96969 5rpx;
}

.category-content {
    flex: 1;
    flex-direction: column;
    padding-left: 200rpx;
    background-color: #fff;
}

.sub-categroy {
    flex: 1;
    flex-wrap: wrap;
    margin-left: 8rpx;
}

.sub-categroy view {
    flex-direction: column;
    width: 178rpx;
    text-align: center;
    margin-top: 36rpx;
}

.sub-categroy image {
    width: 144rpx;
    height: 144rpx;
    margin: 0 auto;
    border: 1rpx solid #e5e5e5;
}

.sub-categroy text {
    font-size: 22rpx;
    margin-top: 20rpx;
}

.order-nav {
    margin-top: 30rpx;
    border: 1rpx solid #e5e5e5;
    border-left: 0;
    border-right: 0;
}

.order-nav view {
    flex: 1;
    text-align: center;
    padding: 30rpx 0;
}

.order-nav text {
    flex: 1;
    color: #333;
    font-size: 28rpx;
    font-weight: 700;
    border-left: 1rpx solid #e5e5e5;
}

.goods-list {
    flex-wrap: wrap;
}

.goods-list .goods {
    position: relative;
    flex-direction: column;
    width: 254rpx;
    margin: 16rpx;
}

.goods-list .goods:nth-child(2n) {
    margin-left: 0;
}

.goods-list .goods image {
    width: 254rpx;
    height: 320rpx;
}

.goods-list .goods .sale-num {
    position: absolute;
    width: 100%;
    padding: 12rpx 0;
    top: 250rpx;
    left: 0;
    color: #fff;
    font-size: 22rpx;
    text-indent: 10rpx;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
}

.goods-list .goods .title {
    color: #333;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 20rpx 10rpx;
}

.goods-list .info {
    flex-direction: column;
}

.goods-list .number {
    padding: 0 16rpx;
    justify-content: space-between;
}

.goods-list .number .prize {
    color: #f96969;
    font-size: 32rpx;
    font-weight: 700;
}

.goods-list .number .prize {
    font-size: 32rpx;
    font-weight: 700;
    color: #f96969;
}

.goods-list .number .collect {
    font-size: 26rpx;
    color: #999;
    background: url(../../images/collect.png) no-repeat right center;
    background-size: 24rpx 24rpx;
    padding-right: 30rpx;
}

.goods-list .number .collect_cur {
    background-image: url(../../images/collect_cur.png);
}
