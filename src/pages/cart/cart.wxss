@import "../__template/icon/icon.wxss";

page {
    color: #f6f6f6;
    display: flex;
    height: 100%;
}

view {
    background: none;
}

.nodata {
    flex: 1;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nodata .cart {
    background: #ddd5d7;
    border-radius: 50%;
    width: 280rpx;
    height: 280rpx;
    margin: 0 auto;
    font-family: icon !important;
}

.nodata .cart::after {
    content: "\e922";
    font-size: 130rpx;
    margin-top: -60rpx;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.nodata .tip {
    color: #5e5e5e;
    font-size: 26rpx;
    margin: 20rpx auto;
}

.nodata button {
    display: block;
    color: white;
    background: #ff5777;
    font-size: 30rpx;
    line-height: 60rpx;
    height: 60rpx;
    width: 210rpx;
}
