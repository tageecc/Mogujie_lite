page {
    background: #fff;
}

.g-login {
    flex-direction: column;
    padding: 60rpx 30rpx 0;
}

.form-group {
    flex-direction: column;
    text-align: center;
    margin-top: 50rpx;
}

.form-group label {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 30rpx;
}

.form-group input {
    font-weight: 700;
    color: 999;
    border-bottom: 1px solid #999;
    opacity: 0.3;
    padding: 10rpx 0;
}

.btn-login {
    width: 100%;
    margin-top: 50rpx;
    background-color: rgb(255, 24, 119);
    color: #fff;
}

.option {
    justify-content: space-between;
    color: #999;
    font-size: 26rpx;
    margin-top: 30rpx;
}

.option .btn-register {
    color: #ff5777;
}

.sprite {
    margin: 90rpx auto 30rpx;
    color: #f1f1f1;
    font-size: 24rpx;
    text-align: center;
    justify-content: space-between;
}

.sprite .tip {
    margin:-10rpx 20rpx 0;
}

.sprite .line {
    height: 2rpx;
    width: 300rpx;
    background-color: #f1f1f1;
}

.icon-qq {
    width: 232rpx;
    height: 232rpx;
    margin: 0 auto;
}
