<view class="g-login">

    <view class="form-group">
        <label>蘑菇街账号</label>
        <input placeholder="输入用户名／邮箱／手机" bindinput="usernameInput" />
    </view>

    <view class="form-group">
        <label>密码</label>
        <input placeholder="输入密码" bindinput="passwordInput" />
    </view>
    <button class="btn-login" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>

    <view class="option">
        <text>免密登陆</text>
        <text class="btn-register">注册帐号</text>
    </view>

    <view class="sprite">
        <view class="line"></view>
        <view class="tip">Or</view>
        <view class="line"></view>
    </view>

    <image class="icon-qq" src="../../images/qq.png" />
</view>